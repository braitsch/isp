
bkgd_color = #D7DADA

body, html
	margin 0
	padding 0
	height 100%

// header //
#header
	width 100%
	height 40px
	background-color #333
#btn-home
	top 5px
	right 55px
	position absolute
#btn-info
	top 5px
	right 10px
	position absolute
#isp-dropdown
	top 5px
	left 10px
	position absolute
#isp-dropdown .dropdown-menu
	min-width 100px
#isp-dropdown-label
	min-width 76px

.modal-body
	padding-bottom 0
	text-align center
.modal-body #isp-selector
	margin 10px auto
	width 100px
.modal-body button
	display block
	width 100px
	margin-bottom 14px
.box
	width 50px
	height 50px
	background-color red

@media only screen and (min-device-width : 320px) and (max-device-width : 480px)
	.modal
		width 300px
	#btn-info
		right 5px
	#btn-home
		right 45px
	#isp-dropdown
		left 5px