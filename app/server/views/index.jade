	.modal-header
		button.close(data-dismiss='modal') x
		h3 My Internet Provider & Status
	.modal-body
		h4 Internet Provider
		select#isp-select
		h4 Internet Status
		select#isp-status
			option Online
			option Offline
		h4 Show Search Results Within
		select#time-filter
			option Ten Minutes
			option One Hour
			option(selected='selected') One Day
			option All Time
	.modal-footer
		button(data-dismiss='modal').btn.btn-success OK
